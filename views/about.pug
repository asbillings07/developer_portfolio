extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9


        h1 #{name}


        p.lead.text-light
          | Full Stack JavaScript Developer.

        
        .portfolio-bio
          p
            | Hi There! Welcome to my portfolio. This is designed to show off my development skills through a number of projects I have created. Feel free to take a look around. If you like what you see, reach out and we can speak about oppourtunties or upcoming projects.
            | 
      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Skills

        
        ul
          li JavaScript
          li HTML
          li CSS
          li JQuery
          li Express.js
          li Pug
          li Git
          li HTTP Requests
          li API Requests
          li Node.js
          li OOP

        h6 Contact Info

        
        ul
          li #{phone}
          li #{email}

        
        a.button.expanded(href=`${linkedIn}`, target="_blank") LinkedIn
        a.button.expanded(href=`${github}`, target="_blank") GitHub
        a.button.expanded(href=`${twitter}`, target="_blank") Twitter
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ← Back
  